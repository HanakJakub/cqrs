{
  "name": "spiral-packages/cqrs",
  "description": "Lightweight message bus supporting CQRS for Spiral Framework",
  "keywords": [
    "spiral-packages",
    "spiral",
    "cqrs",
    "command-bus",
    "query-bus"
  ],
  "homepage": "https://github.com/spiral-packages/cqrs",
  "license": "MIT",
  "authors": [
    {
      "name": "butschster",
      "email": "butschster@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "spiral/boot": "^2.9",
    "spiral/core": "^2.9",
    "spiral/config": "^2.9",
    "spiral/console": "^2.9",
    "spiral/tokenizer": "^2.9",
    "spiral/attributes": "^2.9",
    "symfony/messenger": "^6.0"
  },
  "require-dev": {
    "spiral/framework": "^2.9",
    "spiral/testing": "^1.0",
    "vimeo/psalm": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Cqrs\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Cqrs\\Tests\\App\\": "tests/app",
      "Spiral\\Cqrs\\Tests\\": "tests/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --config=psalm.xml ./src"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "spiral": {
      "bootloaders": [
        "Spiral\\Cqrs\\Bootloader\\CqrsBootloader"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
